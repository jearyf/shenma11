 }

 .enviromentPro .enviromental-monitor-btn{
  font-weight: bold;
  font-size: 0.9rem;
  color: RGB(234,44,29);
 }

 .enviromentPro .line{
  width: 95%;
  height: 0.1rem;
  background:#aaaaaa21;
}

 .enviromentPro .enviromental-monitor-item{
  width: 92%;
  padding: 0.3rem 1rem 1rem 1rem;
 }

.enviromentPro .item-point{
  color: RGB(234,44,29);
  margin-right: 0.5rem;
  margin-left: 0.5rem;
}

.enviromentPro .item-text{
  font-size:0.8rem;
}

.enviromentPro .item-status-successicon{
  font-weight: bold;
