  color: green;
}
.enviromentPro .item-status-erroricon{
  font-weight: bold;
  font-size: 1rem;
  color: red;
}

 .enviromentPro .footer-hint{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 1rem;
  height: 6rem;
