  margin-top: 2.5rem;
  border-radius: 0.3rem;
  background: rgba(240, 240, 240, 0.9);
 }

 .enviromentPro .footer-hint-icon{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 1rem;
 }

 .enviromentPro .footer-hint-text{
  color: #888888;
  font-family: PingFang SC;
  font-weight: regular;
  font-size: 0.8rem;
  line-height: normal;
  letter-spacing: 0;
  text-align: left;
 }

 .enviromentPro .btn-connent-view{
  margin-top: 2rem;
  margin-bottom: 1.5rem;
  display: flex;
  justify-content: center;
  align-items: center;
 }

 .enviromentPro .btn-conntent{
  width: 9.3rem;
  height: 3rem;
  border-radius: 1.3rem;
  background: rgb(234, 44, 29);
  display: flex;
  justify-content: center;
  align-items: center;
 }
.enviromentPro .btn-conntent-span{
  color: rgb(255, 255, 255);
  font-family: Noto Sans S Chinese;
